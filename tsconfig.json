{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "types/*": ["types/*"]
        },
        "lib": ["esnext"]
    },
    "exclude": ["node_modules"]
}
